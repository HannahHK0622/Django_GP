<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fillViewport="true">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1A1A1A"
    tools:context=".home_page">
    <ImageView
        android:layout_width="42dp"
        android:layout_height="43dp"
        android:src="@drawable/time_logo"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="444dp" />
    <EditText
        android:id="@+id/item_time"
        android:layout_width="346dp"
        android:layout_height="62dp"
        android:hint="item time"
        android:padding="16dp"
        android:textColorHint="#FFFFFF"
        android:textSize="20sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="434dp" />
    <TextView
        android:id="@+id/username"
        android:layout_width="216dp"
        android:layout_height="93dp"
        android:layout_marginTop="52dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="username"
        android:textColor="#817B7B"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="346dp"
        android:layout_height="62dp"
        android:layout_below="@+id/username"
        android:padding="16dp"
        android:text="item name"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="146dp" />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="62dp"
        android:src="@drawable/item_name_logo"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="146dp" />

    <TextView
        android:id="@+id/item_pellet"
        android:layout_width="346dp"
        android:layout_height="62dp"
        android:layout_below="@+id/username"
        android:padding="16dp"
        android:text="item pellet"
        android:textColor="#FFFFFFFF"
        android:textSize="20sp" :ignore="MissingConstraints"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="363dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="42dp"
        android:layout_height="43dp"
        android:src="@drawable/item_pellet_logo"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="370dp" />

    <TextView
        android:id="@+id/item_weight"
        android:layout_width="346dp"
        android:layout_height="62dp"
        android:layout_below="@+id/username"
        android:padding="16dp"
        android:text="item weight"
        android:textColor="#FFFFFFFF"
        android:textSize="20sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="293dp" />

    <ImageView
        android:layout_width="34dp"
        android:layout_height="39dp"
        android:src="@drawable/item_weight_logo"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="300dp" />

    <TextView
        android:id="@+id/item_destination"
        android:layout_width="346dp"
        android:layout_height="62dp"
        android:layout_below="@+id/username"
        android:padding="16dp"
        android:text="item destination"
        android:textColor="#FFFFFFFF"
        android:textSize="20sp"
        android:textStyle="normal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="220dp" />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="62dp"
        android:src="@drawable/item_destination_logo"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="220dp" />

    <TextView
        android:id="@+id/item_description"
        android:layout_width="351dp"
        android:layout_height="153dp"
        android:layout_below="@+id/username"
        android:padding="16dp"
        android:text="item_description"
        android:textColor="#FFFFFFFF"
        android:textSize="20sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="504dp" />

    <ImageView
        android:layout_width="51dp"
        android:layout_height="52dp"
        android:src="@drawable/item_description_logo"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="504dp" />

    <ImageButton
        android:id="@+id/scan_qr_code"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:src="@drawable/scanqrcode_button"
        android:background=""
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="740dp" />

    <ImageButton
        android:id="@+id/user_modify"
        android:layout_width="64dp"
        android:layout_height="58dp"
        android:background="#1A1A1A"
        android:scaleType="centerCrop"
        android:src="@drawable/modify_user_button"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="331dp"
        tools:layout_editor_absoluteY="10dp" />

    <Button
        android:id="@+id/item_modify"
        android:layout_width="248dp"
        android:layout_height="67dp"
        android:layout_alignParentStart="true"
        android:text="modify item"
        android:textSize="25dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="657dp" />

    <ImageButton
        android:id="@+id/item_add"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@color/cardview_dark_background"
        android:scaleType="centerCrop"
        android:src="@drawable/add_item_button"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="290dp"
        tools:layout_editor_absoluteY="740dp" />

    <ImageButton
        android:id="@+id/logout"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@color/cardview_dark_background"
        android:scaleType="centerCrop"

        android:src="@drawable/logout_button"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck,TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="10dp" />
    <!-- Add the other TextViews and Buttons here with proper constraints -->

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
